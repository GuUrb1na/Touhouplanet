@model Touhouplanet.Models.TouhouEspecieViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Touhous" asp-action="Index" method="get">
    <p>
    Especie:   <select asp-for="TouhouEspecie" asp-items="Model.Especies">
            <option value="">Todas</option>
        </select>

    Nombre: <input type="text" name="SearchString">
    <input type="submit" value="Filter" /></p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Especie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Habilidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Ocupacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Touhous[0].Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Touhous) {
        <tr>
            <td>
                <img src="@Url.Content(item.Imagen)" width="100" height="100" alt="Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habilidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocupacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
